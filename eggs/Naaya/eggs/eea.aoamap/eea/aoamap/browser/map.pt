<div id="aoa-search-map" i18n:domain="eea-aoamap">

  <div id="filters">

    <div id="selection-info">

      <div class="jquery-template" style="display: none;" id="country-info">
        <p i18n:translate="">
          <img class="country-flag" i18n:name="flag" />
          <tal:t i18n:name="name">${name}</tal:t>:
          <tal:t i18n:name="number-of-assessments">${documents_count}</tal:t>
          assessments
        </p>
        <p i18n:translate="">
          Country fiches:
          <tal:t i18n:name="link-cf-green-economy">
            <a href="#" i18n:translate="">Green economy</a></tal:t>,
          <tal:t i18n:name="link-cf-water">
            <a href="#" i18n:translate="">Water</a></tal:t>
        </p>
      </div>

      <div class="jquery-template" style="display: none;" id="region-info">
        <p i18n:translate="">
          <strong>
          <tal:t i18n:name="name">${name}</tal:t></strong>
          <tal:t
            i18n:name="list-of-countries">{{if countries_txt}}
            (${countries_txt}){{/if}}</tal:t>:
          <tal:t i18n:name="number-of-assessments">${documents_count}</tal:t>
          assessments
        </p>
        <p i18n:translate="">
          Statistics of reviewed reports:
          <tal:t i18n:name="link-statistics-green-economy">
            <a href="#" i18n:translate="">Green economy</a></tal:t>,
          <tal:t i18n:name="link-comparative-overview">
            <a href="#" i18n:translate="">comparative overview</a></tal:t>;
          <tal:t i18n:name="link-regional-report">
            <a href="#" i18n:translate="">regional report</a></tal:t>
        </p>
      </div>

      <div class="jquery-template" style="display: none;" id="global-info">
        <p i18n:translate="">
          <tal:t i18n:name="number-of-assessments">${total_documents}</tal:t>
          assessments
        </p>
        <p i18n:translate="">
          Statistics:
          <tal:t i18n:name="link-statistics-green-economy">
            <a href="#" i18n:translate="">Green economy</a></tal:t>,
          <tal:t i18n:name="link-statistics-water">
            <a href="#" i18n:translate="">Water</a></tal:t>
        </p>
        <p>
          <a href="#" i18n:translate="">Astana report</a>
        </p>
      </div>

    </div>

    <div id="filters-form-holder">
      <p i18n:translate="">
        Fill in the form below in order to search the available documents.
      </p>
      <form name="filters-form" id="filters-form">
        <input type="text" name="text" id="description"
               placeholder="Search for title"
               class="input-text search-input" />

        <div class="fields-separator">&nbsp;</div>

        <select name="theme" class="input-select">
          <option value="" i18n:translate="">Water + Green economy</option>
          <option tal:repeat="option options/filter_options/themes"
                  tal:attributes="value option"
                  tal:content="option" i18n:translate=""></option>
        </select>

        <div class="fields-separator">&nbsp;</div>

        <input type="text" name="year" placeholder="Publication year"
               class="input-text" id="year" size="14"
               i18n:attributes="placeholder" />

        <input type="submit" value="Search" class="standalone"
               id="filter-button"
               i18n:attributes="value" />

        <input type="reset" value="Reset" class="standalone"
               id="reset-button"
               i18n:attributes="value" />

      </form>

    </div>

    <div id="countries-map">
      <div class="translations">
        <span id="map-label-country" i18n:translate="">Country</span>
        <span id="map-label-region" i18n:translate="">Sub-region</span>
        <span id="map-label-global" i18n:translate="">Pan-European</span>
      </div>
    </div>

  </div>

  <div id="results">

    <div class="loading-animation" i18n:translate="">
      <img src="++resource++eea.aoamap/ajax-loader.gif" i18n:name="spinner" />
      Loading documents
    </div>

    <ul class="search-results">
      <div class="jquery-template" style="display: none;"
           id="search-results-document">
        <li class="document">
          <a href="javascript:" class="title">${title}</a>
        </li>
      </div>
    </ul>
  </div>

  <div>
    <div class="jquery-template" style="display: none;"
         id="search-results-document-info">

      <div class="template-section" i18n:translate="">
        <strong i18n:name="author_label">Author:</strong> <tal:t i18n:name="author">${author}</tal:t>
        <tal:t i18n:name="year">{{if year}}(${year}){{/if}}</tal:t>
      </div>

      <div class="template-section" i18n:translate="">
        <strong i18n:name="coverage_label">Coverage:</strong>
        <tal:t i18n:name="country-list">
          {{each country}}{{if $index}}, {{/if}}${$value}{{/each}}
        </tal:t>
        <tal:t i18n:name="region-list">
          {{if region.length}}
            ({{each region}}{{if $index}}, {{/if}}${$value}{{/each}})
          {{/if}}
        </tal:t>
      </div>

      <div class="template-section" i18n:translate="">
        <strong i18n:name="theme_label">Themes:</strong>
        <tal:t i18n:name="theme-list">
          {{each theme}}{{if $index}}, {{/if}}${$value}{{/each}}
        </tal:t>
        <tal:t i18n:name="document-type-list">
        {{if document_type.length}}
            ({{each document_type}}{{if $index}}, {{/if}}${$value}{{/each}})
        {{/if}}
        </tal:t>
      </div>

      {{if url}}
      <div class="template-section" i18n:translate="">
        <strong i18n:name="download_label">Download:</strong>
        <a href="${url}" title="${title}"
           i18n:name="url">${M.ellipsis(url, 100)}</a>
      </div>
      {{/if}}

    </div>
  </div>

  <div class="visualClear">&nbsp;</div>
</div>
<div class="visualClear">&nbsp;</div>

<script type="text/javascript" src="++resource++eea.aoamap/proj4js-compressed.js"></script>
<script type="text/javascript" src="++resource++eea.aoamap/openlayers/OpenLayers.js"></script>
<script type="text/javascript" src="++resource++eea.aoamap/jquery-1.6.2.min.js"></script>
<script type="text/javascript" src="++resource++eea.aoamap/jquery.scrollTo.js"></script>
<script type="text/javascript" src="++resource++eea.aoamap/jquery-ui.min.js"></script>
<script type="text/javascript" src="++resource++eea.aoamap/jquery.tmpl.min.js"></script>
<script type="text/javascript" src="++resource++eea.aoamap/map.js"></script>
<script type="text/javascript" src="++resource++eea.aoamap/search.js"></script>
<script type="text/javascript" src="++resource++eea.aoamap/infobox.js"></script>
<script type="text/javascript" tal:content="structure string:
  M.config = ${options/map_config};
  M.config['async_config_loaded'] = false;
  M.jQuery = jQuery;
  jQuery.noConflict(true);
  M.load_async_config();
  M.load_templates();
  M.map_div = M.jQuery('#countries-map');
  M.get_layer_labels();
  M.jQuery(document).ready(function() {
    M.create_map_search();
  });
  "></script>
