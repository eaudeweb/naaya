<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html xmlns="http://www.w3.org/1999/xhtml" lang="en" xml:lang="en">
    <head>
        <link rel="stylesheet" type="text/css" media="screen"
            tal:attributes="href string:${view/resources_path}/css/box.css" />
        <!--[if lt IE 6]>
        <link rel="stylesheet" type="text/css" media="screen"
            tal:attributes="href string:${view/resources_path}/css/ie6.css" />
        <![endif]-->
        <!--[if lt IE 7]>
        <script defer type="text/javascript"
            tal:attributes="src string:${view/resources_path}/js/pngfix.js"></script>
        <![endif]-->
        <script type="text/javascript" src="misc_/Naaya/jquery.min.js"></script>
        <script type="text/javascript" language="Javascript"
            tal:attributes="src string:${view/resources_path}/js/le.js"></script>
        <script type="text/javascript" language="Javascript"
            tal:attributes="src string:${view/resources_path}/js/bg.js"></script>
        <script type="text/javascript" language="Javascript"
            tal:attributes="src string:${view/resources_path}/js/effects.js"></script>
    </head>
    <body>
        <div id="main_box">
            <div id="box_top">
                <div id="top_left_corner">
                </div>

                <div id="top_center">
                </div>

                <div id="top_right_corner">
                </div>
            </div>

            <div class="clear">
            </div>

            <div id="box_center">

                <div id="left_bar">
                </div>

                <div id="center">
                    <div id="top-bar">
                        <h2 id="title" tal:content="view/address"></h2>

                        <span id="close">
                            <a href="javascript:void(0); ">X</a>
                        </span>
                    </div>

                    <br />

                    <div class="clear">
                    </div>

                    <br />

                    <form method="POST" id="rate-form" tal:attributes="
                        action string:${context/absolute_url}/@@observatory_rate/rate_and_comment">
                        <input type="hidden" name="type" value="" id="rate-val" />
                        <input type="hidden" name="rating" value="" id="vote-val" />

                        <div id="rate">
                            <div align="center" class="rate_item">
                                <img tal:attributes="
                                    src python:view.type_image_paths(0)"
                                    class="rate-img" id="veg-img"
                                    onclick="SelectRate('veg');" />
                            </div>

                            <div align="center" class="rate_item" >
                                <img tal:attributes="
                                    src python:view.type_image_paths(1)"
                                    class="rate-img" id="wat-img"
                                    onclick="SelectRate('wat');" />
                            </div>

                            <div align="center" class="rate_item">
                                <img tal:attributes="
                                    src python:view.type_image_paths(2)"
                                    class="rate-img" id="soil-img"
                                    onclick="SelectRate('soil');" />
                            </div>

                            <div align="center" class="rate_item">
                                <img tal:attributes="
                                    src python:view.type_image_paths(3)"
                                    class="rate-img" id="cit-img"
                                    onclick="SelectRate('cit');" />
                            </div>

                            <p style="padding-top: 3em !important;
                                font-size: 0.9em; font-weight: bold;
                                font-style: italic;"
                                i18n:translate="">
                                Type comment if any. Thanks!
                            </p>
                        </div>

                        <div id="vote">
                            <div align="center" class="vote_item"
                                 tal:repeat="index view/rating_range">
                                <img tal:attributes="
                                        src python:view.rating_image_paths(index);
                                        alt python:view.rating_alts(index);
                                        title python:view.rating_titles(index);
                                        onclick string:SelectVote($(this), ${index});
                                        id string:_v${index}"
                                     class="vote-img"/>
                                <br />
                                <small tal:content="python:view.rating_messages(index)"/>
                            </div>
                        </div>

                        <div class="clear">
                        </div>

                        <div id="input">
                            <textarea id="comment" name="comment:utf8:ustring"
                                rows="7"></textarea>
                        </div>

                        <div class="clear">
                        </div>
                        <br />

                        <div id="buttons">
                            <input type="submit" name="submit" id="submit"
                                value="Rate" i18n:attributes="value"/>
                            <input type="reset" name="reset" id="reset"
                                value="Cancel" i18n:attributes="value"/>
                        </div>
                    </form>
                </div>

                <div id="right_bar">
                </div>

            </div>

            <div class="clear">
            </div>

            <div id="box_bottom">
                <div id="bottom_left_corner">
                </div>

                <div id="bottom_center">
                </div>

                <div id="bottom_right_corner">
                </div>
            </div>
        </div>
    </body>
</html>
