		<script type="text/javascript">
			function processKey(event){
				if (event.keyCode==27) {  //ESC key
					window.close();
				}
			}
			function writeImg(p_src, p_alt){
				op= window.opener
				document.writeln('<img src="' + op.form_path + p_src+'" alt="'+op.EpozLang[p_alt]+'" title="'+op.EpozLang[p_alt]+'" />');
			}
			function init(){
				window.focus();
				setInterval('checkOpener()',200);
			}
			function checkOpener() {
				if(window.opener){
					if (!window.opener.form_path) {
						window.close();
					}
				} else {
					window.close();
				}
			}
		</script>
